{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@Lib/*": ["./lib/*"],
      "@Test/*": ["../test/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./dist/",
    "./node_modules/"
  ]
}
